{
    "name": "smash-grade-app",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "lint": "eslint --ext ts,tsx --report-unused-disable-directives --max-warnings 0 src/*",
        "lint-report": "eslint --ext .ts,.tsx --format json-relative --output-file reports/eslint.json src/*",
        "format": "prettier --write src/**/*",
        "preview": "vite preview",
        "prepare": "husky install",
        "json-db": "json-server --watch db.json",
        "dev-db": "concurrently \"npm:json-db\" \"npm:dev\"",
        "start": "json-server db.json --static ./dist"
    },
    "lint-staged": {
        "*.{ts,tsx}": "npm run lint",
        "*.--write": "npm run format"
    },
    "dependencies": {
        "@tanstack/react-query": "^4.36.1",
        "@tanstack/react-query-devtools": "^4.36.1",
        "antd": "^5.9.1",
        "axios": "^1.5.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.15",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitejs/plugin-react": "^4.0.3",
        "concurrently": "^8.2.1",
        "eslint": "^8.49.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-formatter-json-relative": "^0.1.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.3",
        "husky": "^8.0.3",
        "json-server": "^0.17.3",
        "lint-staged": "^14.0.1",
        "prettier": "3.0.3",
        "sass": "^1.67.0",
        "typescript": "^5.0.2",
        "vite": "^4.4.5"
    }
}
